@mixin font-color-check($background-color) {
  @if lightness($background-color) > 50 {
    color: $wvu-black;
  } @else {
    color: $wvu-white;
  }
}

.container {
  @include outer-container();
}

.colors {
  @include outer-container();
}

.color {
  position: relative;
}

{{#wvu_variables.colors}}
.{{.}} {
  @include font-color-check(${{{.}}});
  @include span-columns(6);
  @include omega(2n);
  background: ${{.}};
  padding: 20px;
  margin-bottom: $gutter;

  &:after {
    content: "##{str-slice(ie-hex-str(${{{.}}}), 4)}";
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: 11px;
    margin: 5px;
  }
}
{{/wvu_variables.colors}}

.color__swatches {
  @include clearfix();
  float: left;
  width: 30%;
  padding-bottom: 15px;
}

{{#wvu_variables.colors}}
.color__swatch-{{.}} {
  @include font-color-check(${{{.}}});
  background: ${{.}};
  float: left;
  height: 30px;
  width: 30px;
  margin: 3px;
}
{{/wvu_variables.colors}}

.color__text {
  columns: 80px 2;
  column-gap: 1em;
  float: right;
  font-size: 20px;
  padding-bottom: 15px;
  width: 60%;

  p {
    margin: 0;
  }
}

{{#wvu_variables.colors}}
.color__text-{{.}} {
  @include font-color-check(${{{.}}});
  color: ${{.}};
}
{{/wvu_variables.colors}}

.color__name {
  bottom: 0;
  left: 0;
  position: absolute;
  margin: 5px;
}

.grey_tones {
  @include outer-container();
}

.grey_tone {
  position: relative;
}

{{#wvu_variables.grey_tones}}
.{{.}} {
  @include font-color-check(${{{.}}});
  @include span-columns(4);
  @include omega(3n);
  background: ${{.}};
  padding: 20px;
  margin-bottom: $gutter;

  &:after {
    content: "##{str-slice(ie-hex-str(${{{.}}}), 4)}";
    position: absolute;
    bottom: 0;
