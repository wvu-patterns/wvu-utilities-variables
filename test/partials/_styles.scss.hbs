{{#wvu_variables.colors}}
.{{.}} {
  color: font-color-check(${{{.}}});
  @include span-columns(12);
  background: ${{.}};
  padding: $gutter;
  margin-bottom: $gutter;

  &:after {
    content: "##{str-slice(ie-hex-str(${{{.}}}), 4)}";
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: 24px;
    margin: 15px;
  }
}
{{/wvu_variables.colors}}

{{#wvu_variables.colors}}
.color__swatch-{{.}} {
  @extend %color-swatch;
  color: font-color-check(${{{.}}});
  background: ${{.}};
}
{{/wvu_variables.colors}}


{{#wvu_variables.colors}}
.color__text-{{.}} {
  color: ${{.}};
}
{{/wvu_variables.colors}}


{{#wvu_variables.grey_tones}}
.{{.}} {
  color: font-color-check(${{{.}}});
  @include span-columns(4);
  @include omega(3n);
  background: ${{.}};
  padding: 20px;
  margin-bottom: $gutter;

  &:after {
    content: "##{str-slice(ie-hex-str(${{{.}}}), 4)}";
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: 11px;
    margin: 5px;
  }
}
{{/wvu_variables.grey_tones}}


{{#wvu_variables.images}}
.{{name}} {
  {{#darkBackground}}background: $wvu-black;{{/darkBackground}}
  background-image: url(${{name}}){{#darkBackground}}, linear-gradient(rgba($wvu-white,0.1) 2px, transparent 2px), linear-gradient(90deg, rgba($wvu-white,0.1) 2px, transparent 2px), linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px){{/darkBackground}};
  background-size: {{width}}px {{height}}px{{#darkBackground}}, 50px 50px, 50px 50px, 10px 10px, 10px 10px{{/darkBackground}};
  background-position: top right{{#darkBackground}}, -2px -2px, -2px -2px, -1px -1px, -1px -1px{{/darkBackground}};

  .image__name {
    color: $wvu-white;
  }
  height: {{height}}px;
  width: {{width}}px;
}
{{/wvu_variables.images}}
