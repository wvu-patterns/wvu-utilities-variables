$max-width: 100%;

@function font-color-check($background-color) {
  @if lightness($background-color) > 50 {
    @return $wvu-black
  } @else {
    @return $wvu-white
  }
}

html {
  font-size: 16px;
}

.container {
  @include outer-container();
  padding: 20px;
}

.colors {
  @include outer-container();
}

.color {
  position: relative;
}

{{#wvu_variables.colors}}
.{{.}} {
  color: font-color-check(${{{.}}});
  @include span-columns(12);
  background: ${{.}};
  padding: $gutter;
  margin-bottom: $gutter;

  &:after {
    content: "##{str-slice(ie-hex-str(${{{.}}}), 4)}";
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: 24px;
    margin: 15px;
  }
}
{{/wvu_variables.colors}}

.color__swatches {
  @include clearfix();
  padding-bottom: 15px;
}

%color_swatch {
  float: left;
  height: 30px;
  width: 30px;
  margin: 3px;

}

{{#wvu_variables.colors}}
.color__swatch-{{.}} {
  @extend %color_swatch;
  color: font-color-check(${{{.}}});
  background: ${{.}};
}
{{/wvu_variables.colors}}

.color__text {
  clear: both;
  columns: 1;
  column-gap: 3em;
  counter-reset: colnum;

  @include media(480px) {
    columns: 2;
  }

  @include media(768px) {
    columns: 3;
  }

  @include media(1080px) {
    columns: 4;
  }


  .color__text--large {
    font-size: 24px;
    padding-bottom: 0;
    margin: 0;
  }

  .accessibility-failure {
    text-decoration: line-through;
  }

  li {
    page-break-inside: avoid;
    break-inside: avoid;
  }

  li:before {
    content: counter(colnum)". ";
  	float:left;
    visibility: hidden;

  }
}

{{#wvu_variables.colors}}
.color__text-{{.}} {
  color: ${{.}};
}
{{/wvu_variables.colors}}

.color__name {
  font-size: 24px;
  bottom: 0;
  left: 0;
  position: absolute;
  margin: 15px;
}

.grey_tones {
  @include outer-container();
}

.grey_tone {
  position: relative;
}

{{#wvu_variables.grey_tones}}
.{{.}} {
  color: font-color-check(${{{.}}});
  @include span-columns(4);
  @include omega(3n);
  background: ${{.}};
  padding: 20px;
  margin-bottom: $gutter;

  &:after {
    content: "##{str-slice(ie-hex-str(${{{.}}}), 4)}";
    position: absolute;
    bottom: 0;
    right: 0;
    font-size: 11px;
    margin: 5px;
  }
}
{{/wvu_variables.grey_tones}}

.images {
  @include outer-container();
}

.image {
  padding: 15px;
  margin-bottom: 5px;
}

.image__name {
  margin-bottom: 5px;
}

{{#wvu_variables.images}}
.{{name}} {
  {{#darkBackground}}background: $wvu-black;{{/darkBackground}}
  background-image: url(${{name}}){{#darkBackground}}, linear-gradient(rgba($wvu-white,0.1) 2px, transparent 2px), linear-gradient(90deg, rgba($wvu-white,0.1) 2px, transparent 2px), linear-gradient(rgba(255,255,255,0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.1) 1px, transparent 1px){{/darkBackground}};
  background-size: {{width}}px {{height}}px{{#darkBackground}}, 50px 50px, 50px 50px, 10px 10px, 10px 10px{{/darkBackground}};
  background-position: top right{{#darkBackground}}, -2px -2px, -2px -2px, -1px -1px, -1px -1px{{/darkBackground}};

  .image__name {
    color: $wvu-white;
  }
  height: {{height}}px;
  width: {{width}}px;
}
{{/wvu_variables.images}}

